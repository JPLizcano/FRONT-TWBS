            <div id="formulario">
              <div class="container">
                <h3 class="center">Agendar una cita</h3>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-calendar-day iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="date" id="Fecha" class="form1" data-length="4" />
                    <label for="Fecha">Fecha</label>
                  </div>
                  <i class="fa-solid fa-clock iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="time" id="Hora" class="form1" data-length="20" />
                    <label for="Hora">Hora</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-clipboard-list iconForm"></i>
                  <div class="input-field inpForm">
                  <select id="selServ" class="">
                    <option value="0" selected disabled>Seleccione el servicio</option>
