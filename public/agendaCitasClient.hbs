                    <label for="Desc">Descripción (opcional)</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <p class="valTotInsu"><i class="fa fa-sack-dollar iconForm"></i>Valor total</p>
                </div>

                <div class="center">
                  <button id="Agendar" type="button" class="waves-effect waves-perso btn black" onclick="agendar()">Agendar</button>
                  <button id="canAgend" type="button" class="waves-effect waves-perso btn black">Cancelar</button>
                </div>
              </div>
            </div>
