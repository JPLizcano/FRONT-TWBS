<html lang="en">

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="build/images/logo-login-white.png" />
    <title>The Warrior Baber Shop</title>
    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Materialize -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Iconos -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/f6414e1f4b.js" crossorigin="anonymous"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="./build/css/estilos.css" rel="stylesheet" />
    <link href="./build/css/insumos.css" rel="stylesheet" />
    <link href="./build/css/historial.css" rel="stylesheet" />

  </head>

  <body>
    {{>header}}
    <main class="content">
      <div>
        <h1 class="d-flex justify-content-center tit2">Historia de movimientos</h1>
      </div>
      <div class="acciones2">
        <a class="btnsConfi" id="btnAgg"><i class="fa fa-plus"></i></a>
      </div>
      <div class="contTable2">
        <table class="table table-striped table-hover table2">
          <thead>
            <tr>
              <th>Tipo de movimiento</th>
              <th>Fecha de movimiento</th>
              <th>Hora de movimiento</th>
              <th id="actInfo">Modificar</th>
            </tr>
          </thead>
          <tbody id="tablaInsu">
            <tr>
              <td>Entrada</td>
              <td>24/09/2023</td>
              <td>12:00 pm</td>
              <td><a class="btnsConfi" id="btnMod"><i class="fa fa-pen"></i></a></td>
            </tr>
          </tbody>
        </table>
      </div>
        <div id="fondo">
          <div class="scrollForm" id="scrollForm">
            <div id="formulario">
              <div class="container">
                <h3 class="center">Registrar historia de movimiento</h3>
                <div class="d-flex justify-content-center" id="contSelMov">
                  <i class="fa-solid fa-file-pen iconForm"></i>
                  <select id="selMov" class="">
                    <option value="0" selected disabled>Tipo de movimiento</option>
                    <option value="1">Entrada</option>
                    <option value="2">Salida</option>
                  </select>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-calendar-day iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="date" id="Fecha" class="form1" data-length="4" />
                    <label for="Fecha">Fecha</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-clock iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="time" id="Hora" class="form1" data-length="20" />
                    <label for="Hora">Hora</label>
                  </div>
                </div>

                <div class="center">
                  <button id="registrar" type="button" class="waves-effect waves-perso btn black">Registrar</button>
                  <button id="cancelar" type="button" class="waves-effect waves-perso btn black">Cancelar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div id="fondo2">
          <div class="scrollForm" id="scrollForm2">
            <div id="formulario2">
              <div class="container">
                <h3 class="center">Actualizar historia de movimiento</h3>
                <div class="d-flex justify-content-center" id="contSelMov">
                  <i class="fa-solid fa-file-pen iconForm"></i>
                  <select id="selMov2" class="">
                    <option value="0" selected disabled>Tipo de movimiento</option>
                    <option value="1">Entrada</option>
                    <option value="2">Salida</option>
                  </select>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-calendar-day iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="date" id="Fecha2" class="form1" data-length="4" />
                    <label for="Fecha2">Fecha</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-clock iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="time" id="Hora2" class="form1" data-length="20" />
                    <label for="Hora2">Hora</label>
                  </div>
                </div>

                <div class="center">
                  <button id="actualizar" type="button" class="waves-effect waves-perso btn black">Actualizar</button>
                  <button id="cancelar2" type="button" class="waves-effect waves-perso btn black">Cancelar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
    </main>
    {{>footer}}
    <script src="./build/js/funciones.js"></script>
    <script src="./build/js/historia.js"></script>
  </body>

</html>