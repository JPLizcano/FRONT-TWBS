<html lang="en">

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="build/images/logo-login-white.png" />
    <title>The Warrior Baber Shop</title>
    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Materialize -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Iconos -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/f6414e1f4b.js" crossorigin="anonymous"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="./build/css/estilos.css" rel="stylesheet" />
    <link href="./build/css/insumos.css" rel="stylesheet" />

  </head>

  <body>
    {{>header}}
    <main class="content">
      <div>
        <h1 class="d-flex justify-content-center tit">Lista De Insumos</h1>
      </div>
        <div class="acciones">
          <a class="btnsConfi" id="btnAgg"><i class="fa fa-cart-plus"></i></a>
        </div>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Cantidad</th>
              <th>Nombre del insumo</th>
              <th>Descripción</th>
              <th class="stock">Stock máximo</th>
              <th class="stock">Stock mínimo</th>
              <th>Fecha de compra</th>
              <th>Precio Unitario</th>
              <th>Valor total</th>
              <th id="actInfo">Actualizar información</th>
            </tr>
          </thead>
          <tbody id="tablaInsu">
            <tr>
              <td>4</td>
              <td>Gomina</td>
              <td>Sin Descripción</td>
              <td>10</td>
              <td>2</td>
              <td>01/08/2023</td>
              <td>$ 4.500</td>
              <td>$ 18.000</td>
              <td><a class="btnsConfi" id="btnMod"><i class="fa fa-pen"></i></a></td>

            </tr>
          </tbody>
        </table>
        <div id="fondo">
          <div class="scrollForm" id="scrollForm">
            <div id="formulario">
              <div class="container">
                <h3 class="center">Agregar insumos</h3>
                <div class="d-flex justify-content-center">
                  <select id="selProv" class="">
                    <option value="0" selected disabled>Seleccione un proveedor</option>
                    <option value="1">Tienda del barbero 1</option>
                    <option value="2">Tienda del barbero 2</option>
                  </select>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-hashtag iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="Cant" class="form1" data-length="4" oninput="valTot()" />
                    <label for="Cant">Cantidad</label>
                  </div>
                  <i class="fa-solid fa-box iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="text" id="nomInsu" class="form1" data-length="20" />
                    <label for="nomInsu">Nombre del insumo</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-clipboard-list iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="text" id="Desc" class="form1" data-length="150" placeholder="Sin descripción" />
                    <label for="Desc">Descripción</label>
                  </div>
                  <i class="fa-solid fa-dollar-sign iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="preUnit" class="form1" data-length="8" oninput="valTot()" />
                    <label for="preUnit">Precio unitario</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-hashtag iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="stockMax" class="form1" data-length="7" placeholder="10" />
                    <label for="stockMax">Stock máximo</label>
                  </div>
                  <i class="fa-solid fa-hashtag iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="stockMin" class="form1" data-length="7" placeholder="2" />
                    <label for="stockMin">Stock mínimo</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <p id="valTotInsu"></p>
                </div>
                <div class="center">
                  <button id="aggInsu" type="button" class="waves-effect waves-perso btn black">Agregar</button>
                  <button id="canInsu" type="button" class="waves-effect waves-perso btn black">Cancelar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div id="fondo2">
          <div class="scrollForm2" id="scrollForm2">
            <div id="formulario2">
              <div class="container">
                <h3 class="center">Actualizar información de insumos</h3>
                <div class="d-flex justify-content-center">
                  <select id="selProv2" class="">
                    <option value="0" selected disabled>Seleccione un proveedor</option>
                    <option value="1">Tienda del barbero 1</option>
                    <option value="2">Tienda del barbero 2</option>
                  </select>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-hashtag iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="Cant2" class="form1" data-length="4" oninput="valTot2()" />
                    <label for="Cant2" id="cantL2">Cantidad</label>
                  </div>
                  <i class="fa-solid fa-box iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="text" id="nomInsu2" class="form1" data-length="20" />
                    <label for="nomInsu2" id="nomInsuL2">Nombre del insumo</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-clipboard-list iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="text" id="Desc2" class="form1" data-length="150" placeholder="Sin descripción" />
                    <label for="Desc2" id="descL2">Descripción</label>
                  </div>
                  <i class="fa-solid fa-dollar-sign iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="preUnit2" class="form1" data-length="8" oninput="valTot2()" />
                    <label for="preUnit2" id="preUnitL2">Precio unitario</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <i class="fa-solid fa-hashtag iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="stockMax2" class="form1" data-length="7" placeholder="10" />
                    <label for="stockMax2" id="stockMaxL2">Stock máximo</label>
                  </div>
                  <i class="fa-solid fa-hashtag iconForm"></i>
                  <div class="input-field inpForm">
                    <input type="number" id="stockMin2" class="form1" data-length="7" placeholder="2" />
                    <label for="stockMin2" id="stockMinL2">Stock mínimo</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center contForm">
                  <p id="valTotInsu2"><i class="fa fa-sack-dollar iconForm"></i>Valor total</p>
                </div>

                <div class="center">
                  <button id="actInsu" type="button" class="waves-effect waves-perso btn black">Actualizar</button>
                  <button id="canInsu2" type="button" class="waves-effect waves-perso btn black">Cancelar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
    </main>
    {{>footer}}
    <script src="./build/js/funciones.js"></script>
    <script src="./build/js/insumos.js"></script>
  </body>

</html>