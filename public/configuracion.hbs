<html lang="en">

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="build/images/logo-login-white.png" />
    <title>The Warrior Baber Shop</title>
    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Materialize -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Iconos -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/f6414e1f4b.js" crossorigin="anonymous"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="./build/css/estilos.css" rel="stylesheet" />

  </head>

  <body onload="listarRoles()">
    {{>header}}
    <main class="content">
      <div>
        <h1 class="d-flex justify-content-center tit">Lista de roles</h1>
      </div>
      <div>
        <div class="acciones">
          <a class="btnsConfi" id="btnAgg"><i class="fa fa-user-plus"></i></a>
        </div>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Roles</th>
              <th>Estado</th>
              <th id="actInfo">Actualizar información</th>
            </tr>
          </thead>
          <tbody id="tablaRoles">
          </tbody>
        </table>
      </div>
      <div id="fondo">
        <div id="formulario">
          <div class="container">
            <h3 class="center">Registrar nuevo rol</h3>
            <div class="centrar">
              <div class="input-field inpPerso">
                <input type="text" id="nuevoRol" data-length="20" />
                <label for="nuevoRol">Ingrese el nombre del nuevo rol</label>
              </div>
            </div>
            <h3 class="center">Seleccione los permisos del rol</h3>
            <div class="checkbox-container">
              <div class="column">
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="confi" value="Configuración" />
                  Configuración
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="proov" value="Proveedores" />
                  Proveedores
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="gasOp" value="Gastos operativos" />
                  Gastos operativos
                </label>
              </div>
              <div class="column">
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="usuar" value="Usuarios" />
                  Usuarios
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="emple" value="Empleados" />
                  Empleados
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="clien" value="Clientes" />
                  Clientes
                </label>
              </div>
              <div class="column">
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="produ" value="Insumos" />
                  Insumos
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="agenCi" value="Agendamiento de citas" />
                  Agendamiento de citas
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles" id="ventas" value="Ventas" />
                  Ventas
                </label>
              </div>
            </div>
            <div class="center">
              <button id="regRol" type="button" class="waves-effect waves-perso btn black">Registrar</button>
              <button id="canRol" type="button" class="waves-effect waves-perso btn black">Cancelar</button>
            </div>
          </div>
        </div>
      </div>
      <div id="fondo2">
        <div id="formulario2">
          <div class="container">
            <h3 class="center">Actualizar un rol</h3>
            <div class="centrar">
              <div class="input-field inpPerso">
                <input type="text" id="actRol" data-length="20" />
                <label for="actRol" id="labelActRol">Ingrese el nuevo nombre del rol </label>
              </div>
            </div>
            <h3 class="center">Seleccione los permisos del rol</h3>
            <div class="checkbox-container">
              <div class="column">
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Configuración" />
                  Configuración
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Proveedores" />
                  Proveedores
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Gastos operativos" />
                  Gastos operativos
                </label>
              </div>
              <div class="column">
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Usuarios" />
                  Usuarios
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Empleados" />
                  Empleados
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Clientes" />
                  Clientes
                </label>
              </div>
              <div class="column">
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Insumos" />
                  Insumos
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Agendamiento de citas" />
                  Agendamiento de citas
                </label>
                <label class="selectRol">
                  <input type="checkbox" name="roles2" id="Ventas" />
                  Ventas
                </label>
              </div>
            </div>
            <div class="center">
              <button id="actRolBtn" type="button" class="waves-effect waves-perso btn black">Actualizar</button>
              <button id="canRol2" type="button" class="waves-effect waves-perso btn black">Cancelar</button>
            </div>
          </div>
        </div>

      </div>
    </main>
    {{>footer}}
    <script src="./build/js/funciones.js"></script>
    <script src="./build/js/confi.js"></script>
  </body>

</html>